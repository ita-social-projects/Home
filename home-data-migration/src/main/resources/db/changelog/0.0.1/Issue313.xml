<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="Issue313.001" author="S.Kolesnychenko">
        <dropForeignKeyConstraint
                baseTableName="ownerships"
                constraintName="apartment_fk"/>
    </changeSet>
    <changeSet id="Issue313.002" author="S.Kolesnychenko">
        <dropForeignKeyConstraint
                baseTableName="invitations"
                constraintName="apartment_fk"/>
    </changeSet>
    <changeSet id="Issue313.003" author="S.Kolesnychenko">
        <addForeignKeyConstraint baseColumnNames="apartment_id"
                                 baseTableName="ownerships"
                                 constraintName="apartment_fk"
                                 onDelete="CASCADE"
                                 referencedColumnNames="id"
                                 referencedTableName="apartments"/>
    </changeSet>
    <changeSet id="Issue313.004" author="S.Kolesnychenko">
        <addForeignKeyConstraint baseColumnNames="apartment_id"
                                 baseTableName="invitations"
                                 constraintName="apartment_fk"
                                 onDelete="CASCADE"
                                 referencedColumnNames="id"
                                 referencedTableName="apartments"/>
    </changeSet>
    <changeSet id="Issue313.005" author="S.Kolesnychenko">
        <sql>
            DELETE
            FROM apartments a USING (
            SELECT MIN(ctid) as ctid, apartment_number
            FROM apartments
            GROUP BY apartment_number HAVING COUNT(*) > 1
            ) b
            WHERE a.apartment_number = b.apartment_number
              AND a.ctid
                !=
                b.ctid
        </sql>
    </changeSet>

    <changeSet id="Issue313.006" author="S.Kolesnychenko">
        <sql>
            CREATE UNIQUE INDEX apartment_number_key ON apartments (apartment_number, house_id);
        </sql>
    </changeSet>
</databaseChangeLog>
